worker_processes auto;

error_log /var/log/nginx/error.log info;

events {
    worker_connections  1024;
}

mail {
    server_name       mail.m2-7.ephec-ti.be;
    proxy  on;

    ssl_certificate        /etc/ssl/certs/server.crt;
    ssl_certificate_key    /etc/ssl/certs/server.key;

    server {
        listen   25;
        protocol smtp;
        auth_http         172.42.0.27:49900;
    }
    server {
        listen   110;
        protocol pop3;
        proxy_pass_error_message on;
        auth_http         172.42.0.27:49800;
    }
    server {
        listen   143;
        protocol imap;
        auth_http         172.42.0.27:49700;
    }

    server {
        listen   587 ssl;
        protocol smtp;
        auth_http         172.42.0.27:49900;
    }
    server {
        listen   995 ssl;
        protocol pop3;
        proxy_pass_error_message on;
        auth_http         172.42.0.27:49800;
    }
    server {
        listen   993 ssl;
        protocol imap;
        auth_http         172.42.0.27:49700;
    }
}